<%- messages() %>

<h1>Delete <%= inv_make %> <%= inv_model %></h1>
<p>Confirm Deletion - This action is permanent and cannot be undone.</p>

<form action="/inv/delete" method="post">
  <label for="inv_make">Make</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    value="<%= inv_make %>"
    readonly
  />

  <label for="inv_model">Model</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= inv_model %>"
    readonly
  />

  <label for="inv_year">Year</label>
  <input
    type="text"
    id="inv_year"
    name="inv_year"
    value="<%= inv_year %>"
    readonly
  />

  <label for="inv_price">Price</label>
  <input
    type="text"
    id="inv_price"
    name="inv_price"
    value="<%= inv_price %>"
    readonly
  />

  <input type="hidden" name="inv_id" value="<%= inv_id %>" />
  <button type="submit">Delete</button>
</form>
