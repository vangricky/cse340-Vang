<%- messages() %>

<h1>Account Management</h1>

<!-- Greet the user -->
<h2>Welcome <%= locals.accountData.firstname %></h2>

<!-- Update Account Information Link -->
<p>
  <a
    href="/account/update/<%= locals.accountData.account_id %>"
    title="Update your account information"
  >
    Update Account Information
  </a>
</p>

<!-- Conditional Inventory Management Section -->
<% if (locals.accountData.account_type === "Employee" ||
locals.accountData.account_type === "Admin") { %>
<h3>Inventory Management</h3>
<p>
  <a href="/inv" title="Go to Inventory Management">Manage Inventory</a>
</p>
<% } %>
