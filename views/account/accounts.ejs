<%- messages() %>

<div class="account-management">
  <h1 class="page-title">Account Management</h1>

  <!-- Greet the user -->
  <h2 class="greeting">Welcome, <%= locals.accountData.firstname %></h2>

  <!-- Update Account Information Link -->
  <p class="update-account">
    <a
      href="/account/update/<%= locals.accountData.account_id %>"
      class="action-link"
      title="Update your account information"
    >
      Update Account Information
    </a>
  </p>

  <!-- Conditional Inventory Management Section -->
  <% if (locals.accountData.account_type === "Employee" ||
  locals.accountData.account_type === "Admin") { %>
  <div class="inventory-management">
    <h3 class="section-title">Inventory Management</h3>
    <p>
      <a href="/inv" class="action-link" title="Go to Inventory Management">
        Manage Inventory
      </a>
    </p>
  </div>
  <% } %>
</div>
