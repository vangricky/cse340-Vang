<div>
  <h1 class="login-header">Welcome!</h1>
</div>

<form class="login-form">
  <div class="email-section login-form-placement">
    <label class="login-labels" for="email">Email</label>
    <input
      class="login-inputs"
      name="account_email"
      type="email"
      placeholder="emailname@byui.edu"
      required
    />
  </div>
  <div class="password-section login-form-placement">
    <label class="login-labels" for="password">Password</label>
    <input
      class="login-inputs"
      name="account_password"
      type="password"
      placeholder="Password"
      required
    />
  </div>

  <div class="login-submit-button">
    <input class="login-button" type="submit" value="Login" />
  </div>

  <div class="sign-up-account">
    <p>Don't have an account? <a href="/register">Sign up?</a></p>
  </div>
</form>
