<%- messages() %>

<h1><%= title %></h1>

<!-- Account Update Form -->
<section class="account-update-section">
  <h2>Update Account Information</h2>
  <form class="account-update-form" action="/account/update" method="post">
    <!-- Hidden Input for Account ID -->
    <input
      type="hidden"
      name="account_id"
      value="<%= typeof account_id !== 'undefined' ? account_id : '' %>"
    />

    <label for="account_firstname">First Name</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>"
      required
    />

    <label for="account_lastname">Last Name</label>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>"
      required
    />

    <label for="account_email">Email</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
      required
    />

    <button type="submit">Update Information</button>
  </form>
</section>

<!-- Change Password Form -->
<section class="password-change-section">
  <h2>Change Password</h2>
  <p>
    Please enter a new password to update your current one. Passwords must be at
    least 12 characters long, include uppercase and lowercase letters, a number,
    and a symbol.
  </p>
  <form
    class="password-change-form"
    action="/account/update-password"
    method="post"
  >
    <!-- Hidden Input for Account ID -->
    <input
      type="hidden"
      name="account_id"
      value="<%= typeof account_id !== 'undefined' ? account_id : '' %>"
    />

    <!-- New Password -->
    <label for="new_password">New Password</label>
    <input type="password" id="new_password" name="new_password" required />

    <!-- Confirm New Password -->
    <label for="confirm_password">Confirm New Password</label>
    <input
      type="password"
      id="confirm_password"
      name="confirm_password"
      required
    />

    <button type="submit">Change Password</button>
  </form>
</section>

<style>
  form {
    display: flex;
    flex-direction: column;
    max-width: 400px;
    margin: auto;
  }
  label {
    margin: 8px 0 4px;
  }
  input {
    padding: 8px;
    font-size: 16px;
    margin-bottom: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  button {
    padding: 10px;
    font-size: 16px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  button:hover {
    background-color: #0056b3;
  }
</style>
